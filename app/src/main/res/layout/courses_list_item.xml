<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/course_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_course_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_course_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            android:text="Course Start Date" />

        <TextView
            android:id="@+id/text_view_course_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_view_course_start"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"

            android:layout_marginLeft="27dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/text_view_course_start"
            android:text="Course End Date" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>