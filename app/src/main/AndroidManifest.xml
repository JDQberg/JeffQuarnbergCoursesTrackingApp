<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jeffquarnbergtrackingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ViewAssessmentActivity"
            android:label="View Assessment Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditAssessmentActivity"
            android:label="Edit Assessment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddAssessmentActivity"
            android:label="Add an Assessment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCourseActivity"
            android:label="Edit Course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewCourseActivity"
            android:label="View Course Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCourseActivity"
            android:label="Add a Course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditTermActivity"
            android:label="Edit Term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewTermActivity"
            android:label="View Term Details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTermActivity"
            android:label="Add a Term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermsActivity"
            android:label="@string/title_activity_terms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeScreenActivity"
            android:label="WGU Student Progress App"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>